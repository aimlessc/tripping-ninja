<Window x:Class="OfCourse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:OfCourse"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OfCourse Registration" Height="750" Width="1000" Background="#FFF1F1F1">
	<Window.Resources>
		<Storyboard x:Key="ExpandResults">
			<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ResultsPane">
				<DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
			</ObjectAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="ResultsPane">
				<EasingDoubleKeyFrame KeyTime="0" Value="0"/>
				<EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="265"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>
		<Storyboard x:Key="HideResults">
			<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ResultsPane">
				<DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
				<DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Collapsed}"/>
			</ObjectAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="ResultsPane">
				<EasingDoubleKeyFrame KeyTime="0" Value="265"/>
				<EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0"/>
				<EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="247"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>
	</Window.Resources>
	<Window.Triggers>
		<EventTrigger RoutedEvent="Mouse.MouseUp" SourceName="Expander"/>
	</Window.Triggers>
    <DockPanel>
        <DockPanel Height="32" VerticalAlignment="Top" LastChildFill="False" DockPanel.Dock="Top">
            <TextBox Width="240" Margin="5,4" TextChanged="Search" DockPanel.Dock="Left"/>
            <ComboBox Width="115" Height="23" Margin="0,0,5,0" DockPanel.Dock="Left">
                <ComboBoxItem Content="Faculty" HorizontalAlignment="Left" Width="88" IsSelected="True" Visibility="Collapsed"/>
                <ComboBoxItem Content="All Faculties" HorizontalAlignment="Left" Width="113"/>
                <ComboBoxItem Content="Arts" HorizontalAlignment="Left" Width="113"/>
                <ComboBoxItem Content="Business" HorizontalAlignment="Left" Width="113"/>
                <ComboBoxItem Content="Education" HorizontalAlignment="Left" Width="113"/>
                <ComboBoxItem Content="Engineering" HorizontalAlignment="Left" Width="113"/>
                <ComboBoxItem Content="Science" HorizontalAlignment="Left" Width="113"/>
            </ComboBox>
            <Button Content="..." Height="23" Width="20" DockPanel.Dock="Left"></Button>
            <GridSplitter DockPanel.Dock="Right"></GridSplitter>
            <Button Content="Finalize" Width="75" Height="23" DockPanel.Dock="Right" Margin="0,0,5,0"/>
            
        </DockPanel>
        <ScrollViewer Name="ResultsPane" Margin="5,5,0,0" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" DockPanel.Dock="Left" Width="265" Visibility="Collapsed">
            <Grid HorizontalAlignment="Left" Width="247">
                <StackPanel Name="Results">
                    <Label Name="NotFoundLabel" Content="No results found!" HorizontalAlignment="Center" Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <DockPanel Margin="2,0,0,0" DockPanel.Dock="Right">
            <local:ExpandTab x:Name="Expander"/>
            <Grid Margin="10,0,0,0" DockPanel.Dock="Bottom">
                <Label Content="Cart Goes Here?" HorizontalAlignment="Center" Margin="0,25" VerticalAlignment="Center"/>
            </Grid>
            <Grid DockPanel.Dock="Top" x:Name="SchedulePanel" Margin="10,0,0,0" ShowGridLines="True">
                <local:TimeSchedule x:Name="Schedule" />
            </Grid>
        </DockPanel>

    </DockPanel>
</Window>
