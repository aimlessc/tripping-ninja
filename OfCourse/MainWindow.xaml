<Window x:Class="OfCourse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OfCourse Registration" Height="499.254" Width="798.134" Background="Gainsboro">
    <Grid>

        <StackPanel Height="32" VerticalAlignment="Top" Orientation="Horizontal">
            <TextBox Width="240" Height="23" Margin="5,4" TextChanged="Search"/>
            <ComboBox Width="115" Height="23" Margin="0,0,5,0">
                <ComboBoxItem Content="Faculty" HorizontalAlignment="Left" Width="88" IsSelected="True" Visibility="Collapsed"/>
                <ComboBoxItem Content="All Faculties" HorizontalAlignment="Left" Width="113"/>
                <ComboBoxItem Content="Arts" HorizontalAlignment="Left" Width="113"/>
                <ComboBoxItem Content="Business" HorizontalAlignment="Left" Width="113"/>
                <ComboBoxItem Content="Education" HorizontalAlignment="Left" Width="113"/>
                <ComboBoxItem Content="Engineering" HorizontalAlignment="Left" Width="113"/>
                <ComboBoxItem Content="Science" HorizontalAlignment="Left" Width="113"/>
            </ComboBox>
            <Button Content="..." Height="23" Width="20"></Button>
            <GridSplitter HorizontalAlignment="Stretch" Width="5"/>
            <Button Content="Finalize" Width="75" Height="23"/>
        </StackPanel>
        <ScrollViewer Name="ResultsPane" Height="422" VerticalAlignment="Top" Margin="5,37,511,0" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="Results">
            </StackPanel>
        </ScrollViewer>
        <StackPanel HorizontalAlignment="Left" Height="432" Margin="284,37,0,0" VerticalAlignment="Top" Width="506">
            <Grid x:Name="SchedulePanel" HorizontalAlignment="Left" Height="277" Width="496" Margin="10,0,0,0">
                <Label Content="Schedule goes here" HorizontalAlignment="Left" Margin="194,125,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Height="155" Margin="10,0,0,0">
                <Label Content="Cart Goes Here?" HorizontalAlignment="Left" Margin="212,68,0,0" VerticalAlignment="Top"/>
            </Grid>
        </StackPanel>

    </Grid>
</Window>
