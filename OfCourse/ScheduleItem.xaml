<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="OfCourse.ScheduleItem"
	x:Name="UserControl"
	d:DesignWidth="185" d:DesignHeight="52.5" BorderThickness="2" Background="#FFE2FFFB" BorderBrush="#FFB2B2B2">

	<Grid x:Name="LayoutRoot" VerticalAlignment="Center" >
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Label x:Name="CNum" Content="Course Number" Margin="0" FontSize="10.667" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Center"/>
		<Label x:Name="CType" Content="Class Type" Margin="0" VerticalAlignment="Center" FontSize="9.333" Padding="0" HorizontalContentAlignment="Center" Grid.Row="1"/>
		<Label x:Name="CTimes" Content="Times" Margin="0" VerticalAlignment="Center" FontSize="9.333" Grid.Row="2" Padding="0" HorizontalContentAlignment="Center"/>
	</Grid>
</UserControl>