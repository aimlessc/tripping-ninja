		<DockPanel x:Name="LayoutRoot" ClipToBounds="True">
			<Border x:Name="Trash" DockPanel.Dock="Right" BorderThickness="1" Margin="5,0,0,0" Background="#FFE2E2E2" BorderBrush="#FF9C9C9C">
				<Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Stretch="Uniform" Width="142.687" AllowDrop="True">
					<Canvas x:Name="svg3013" Width="24" Height="24">
						<Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="path3015" Fill="#000000">
							<Path.Data>
								<PathGeometry Figures="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2v-12h-12v12zm13-15h-3.5l-1-1h-5l-1 1h-3.5v2h14v-2z" FillRule="NonZero"/>
							</Path.Data>
						</Path>
					</Canvas>
				</Viewbox>
			</Border>
			<ScrollViewer x:Name="Cart" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible" Background="White" AllowDrop="True">
				<StackPanel x:Name="DisplayArea" Orientation="Horizontal" Margin="66,0,0,0" />
